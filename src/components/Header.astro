---
import Link from '@/components/Link.astro'
import ThemeToggle from '@/components/ThemeToggle.astro'
import { NAV_LINKS, SITE } from '@/consts'
import { Image } from 'astro:assets'
import logo from '../../public/static/logo.svg'
---

<div>
  <div
    class="mx-auto flex max-w-3xl items-center justify-between gap-6 px-4 py-3 sm:gap-8"
  >
    <Link href="/" class="flex shrink-0 items-center gap-3 min-w-0">
      <Image src={logo} alt="Logo" class="size-5 shrink-0 sm:size-6" />
      <span
        class="hidden truncate text-lg leading-none font-medium min-[400px]:block"
        >{SITE.title}</span
      >
    </Link>
    <nav class="flex shrink-0 flex-wrap items-center justify-center gap-x-4 gap-y-1 text-xs tracking-[0.16em] lowercase sm:gap-x-6 sm:text-sm">
      {
        NAV_LINKS.map((item) => (
          <Link
            href={item.href}
            class="text-foreground/60 hover:text-foreground transition-colors"
          >
            {item.label}
          </Link>
        ))
      }
    </nav>
    <div class="flex shrink-0">
      <ThemeToggle transition:persist />
    </div>
  </div>
</div>
